.steps-section
  background-image: url("../images/steps-section-bg.jpg")
  background-repeat: no-repeat;
  background-position: center
  background-size cover

  &__container
    position relative
    z-index 1
    padding 20px 0 20px 0
    +above($breakpoints.xxl)
      padding 110px 0 83px 0

  &__rose
    display: none
    +above($breakpoints.lg)
      display: block
      position: absolute
      z-index -1
      top: -139px;
      left: -327px;

  &__line
    width 0px
    height: 30px
    border-left: 1px solid $color-white
    margin 0 auto
    +above($breakpoints.md)
      height: 50px

  &__title
    text-align: center
    padding 20px 0
    +above($breakpoints.lg)
      padding 32px 0

  &__text
    text-align: center
    padding-bottom: 20px
    +above($breakpoints.lg)
      padding-bottom: 84px

  &__cards
    +above($breakpoints.md)
      display: flex
      flex-direction: row
      justify-content center
      flex-wrap: wrap
      column-gap: 15px
      row-gap: 54px

  &__card
    width 280px !important
    height: 134px
    +above($breakpoints.sm)
      width 300px !important
    +above($breakpoints.md)
      width 224px !important

  &__card-title
    width 103px
    height: 43px
    margin 0 auto 24px
    background-color #5B0015
    display: flex
    justify-content center
    align-items: center

  &__bottom-title
    padding: 20px 0 20px 0
    +above($breakpoints.lg)
      padding: 86px 0 30px 0

  &__bottom-btn
    width 100%
    max-width: 344px
    padding 0 20px
    margin: 0 auto
