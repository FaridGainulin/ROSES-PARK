.form-modal
  &__feedback
    border-radius: 10px;
    background: $color-text-black
    color: $color-white
    padding: 12px

  &__wrapper
    border 1px solid #C7AA6C
    border-radius: 10px
    padding 20px
    +above($breakpoints.sm)
      padding 30px
    +above($breakpoints.xxl)
      padding: 48px

  &__info-title
    font-size: 19px;
    margin: 0 0 18px 0
    font-family: "Inter-Bold"
    font-weight: 700
    +above($breakpoints.sm)
      font-size: 21px
      margin: 0 0 40px 0
    +above($breakpoints.xxl)
      font-size: 22px
    br
      display: block

  &__feedback-item
    max-width: 255px
    margin: 0 auto
    +above($breakpoints.sm)
      max-width: 280px
    +above($breakpoints.xxl)
      max-width: 343px

  &__feedback-input
    height: 55px
    margin-bottom: 10px
    +above($breakpoints.sm)
      height: 60px
      margin-bottom: 15px
    +above($breakpoints.xxl)
      height: 64px
      margin-bottom: 20px
    .input
      &__field
        height: 100%
        border: none

  &__button
    margin-bottom: 14px
    .btn
      height: 50px
      +above($breakpoints.sm)
        height: 60px
      +above($breakpoints.xxl)
        height: 58px

  &__agree
    font-size: 10px;
    line-height: 13px;
    +above($breakpoints.sm)
      font-size: 11px;
      line-height: 13px;
    +above($breakpoints.md)
      font-size: 12px;
      line-height: 14px;
    +above($breakpoints.xxl)
      font-size: 13px;
      line-height: 15px;
    a
      text-decoration: underline
