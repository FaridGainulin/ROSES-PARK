.test-section
  background-image: url("../images/test-section-bg.jpg")
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #252525
  position: relative;
  z-index: 2;

  &__container
    position relative
    padding 20px 0 20px 0
    +above($breakpoints.lg)
      padding 110px 0 134px 0

  &__title
    text-align: center
    text-transform: uppercase
    padding 20px 0 20px 0
    +above($breakpoints.lg)
      padding 32px 0 32px 0

  &__sub-title
    text-align: center
    padding 0 0 20px 0
    +above($breakpoints.lg)
      padding 0 0 32px 0

  &__cards
    padding 30px 0 30px 0
    +above($breakpoints.md)
      padding 46px 0 50px 0
      display: flex
      flex-direction: row
      justify-content center
      flex-wrap: wrap
      gap: 20px
    +above($breakpoints.xxl)
      padding 46px 0 326px 0

  &__card
    width 280px !important
    height: 98px
    background-color $color-text-black
    padding 13px 0 12px 0
    display: flex
    flex-direction: column
    align-items: center
    justify-content: space-between
    text-align: center
    +above($breakpoints.sm)
      width 300px !important
    +above($breakpoints.md)
      width 280px !important

  &__card-text
    line-height 120%

  &__bottom-title
    padding-top 20px
    +above($breakpoints.md)
      padding-top 0

  &__form
    padding 20px 0 20px 0
    display: flex
    flex-direction: column
    justify-content center
    align-items: center
    gap: 10px
    +above($breakpoints.md)
      flex-direction: row
      padding 24px 0 18px 0

.test-item
  width 257px